{
  "compilerOptions": {
    "target": "es2020",                          // ✅ wajib, biar Set/Map, async/await dll aman
    "lib": ["dom", "dom.iterable", "esnext"],    // ✅ support browser + fitur modern
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",                          // ✅ Next.js butuh ESM
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
"baseUrl": "."
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "types/**/*.ts", "prisma/**/*.ts",],
  "exclude": ["node_modules"]
}
